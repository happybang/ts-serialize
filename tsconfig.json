{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "target": "es5",
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false
    },
    "include" : [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ]
}